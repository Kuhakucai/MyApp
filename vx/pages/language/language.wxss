/* 语言设置页面 */
.language-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx 0;
}

.language-list {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.language-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.language-item:last-child {
  border-bottom: none;
}

.language-item:active {
  background-color: #f8f8f8;
}

.language-item.active {
  background-color: #fff5f9;
}

.language-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.language-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.language-code {
  font-size: 26rpx;
  color: #999;
}

.language-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 40rpx;
  color: #FF69B4;
  font-weight: bold;
}
