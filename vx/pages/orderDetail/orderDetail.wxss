/* pages/orderDetail/orderDetail.wxss */
.order-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 140rpx;
}

/* 订单状态卡片 */
.status-card {
  background: linear-gradient(135deg, #FF69B4 0%, #FFB6C1 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 105, 180, 0.3);
}

.status-card.preparing {
  background: linear-gradient(135deg, #1890ff 0%, #4ECDC4 100%);
}

.status-card.completed {
  background: linear-gradient(135deg, #52c41a 0%, #95de64 100%);
}

.status-card.cancelled {
  background: linear-gradient(135deg, #999 0%, #bbb 100%);
}

.status-icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
}

.status-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 订单信息 */
.info-card {
  margin-bottom: 20rpx;
}

.info-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* 商品清单 */
.items-card {
  margin-bottom: 20rpx;
}

.items-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.items-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-row:last-child {
  border-bottom: none;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-quantity {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.item-price {
  font-size: 28rpx;
  color: #FF69B4;
  font-weight: 500;
  min-width: 100rpx;
  text-align: right;
}

/* 费用明细 */
.cost-card {
  margin-bottom: 20rpx;
}

.cost-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.cost-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.cost-row.total {
  padding-top: 20rpx;
}

.cost-row.total .cost-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.cost-row.total .price {
  font-size: 40rpx;
}

.cost-label {
  color: #666;
}

.cost-value {
  color: #333;
  font-weight: 500;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.action-btn.cancel {
  background-color: #fff;
  color: #999;
  border: 2rpx solid #ddd;
}

.action-btn.cancel:active {
  background-color: #f5f5f5;
}
